{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}

    <div class="row">
        <div class="col-1">
            <a href="{{ path('product_index') }}">
                <i class="fas fa-2x fa-chevron-left"></i>
            </a>
        </div>

        <div class="col-11">
            <h1>Product</h1>
        </div>
    </div>

    <div class="row">
        <div class="col">

            <table class="table">
                <tbody>
                <tr>
                    <th>Title</th>
                    <td>{{ product.title }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ product.description }}</td>
                </tr>
                <tr>
                    <th>Price</th>
                    <td>{{ product.price }}</td>
                </tr>
                <tr>
                    <th>Category</th>
                    <td>{{ product.category.name }}</td>
                </tr>
                <tr>
                    <th>Owner</th>
                    <td>{{ product.owner.username }}</td>
                </tr>
                </tbody>
            </table>

        </div>
    </div>

    {% if is_granted('ROLE_USER') %}
        <div class="row">
            <div class="col-6">
                <p class="text-right">
                    <a class="btn btn-outline-primary" href="{{ path('product_edit', {'id': product.id}) }}">Edit</a>
                </p>
            </div>

            <div class="col-6">
                {{ include('product/_delete_form.html.twig') }}
            </div>
        </div>
    {% endif %}

{% endblock %}